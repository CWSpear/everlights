{
  "name": "everlights",
  "version": "1.0.0-alpha.8",
  "description": "A developer-friendly SDK for for easy integrations with EverLights (v3)",
  "repository": {
    "type": "git",
    "url": "https://github.com/CWSpear/everlights.git"
  },
  "bugs": "https://github.com/CWSpear/everlights/issues",
  "homepage": "https://github.com/CWSpear/everlights/blob/master/README.md",
  "main": "./dist/require/main.js",
  "type": "module",
  "exports": {
    "import": "./dist/module/main.js",
    "require": "./dist/require/main.js"
  },
  "types": "./dist/require/main.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run compile:module && npm run compile:require",
    "compile:module": "snowpack build",
    "compile:require": "tsc --project ./tsconfig.build.json",
    "clean": "rimraf ./dist/",
    "dev": "ts-node ./src/scratch.ts",
    "dev:watch": "ts-node-dev --notify --rs --transpile-only --respawn ./src/scratch.ts",
    "prettier": "prettier -w ./src/**/*",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["everlights", "sdk", "lighting", "christmas"],
  "author": "CWSpear <cam@cameronspear.com>",
  "license": "ISC",
  "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
  "dependencies": {
    "axios": "^0.21.1",
    "color-normalize": "^1.5.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/node": "^15.12.2",
    "chalk": "^4.1.1",
    "prettier": "^2.3.1",
    "rimraf": "^2.7.1",
    "snowpack": "^3.5.9",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  }
}
